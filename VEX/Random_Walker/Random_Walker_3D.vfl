
float t = @Time;
int choice = int(nrandom()*6);
i@prt = choice; 

int stepX = int(random(3))-1;
int stepY = int(random(3))-1;
int stepZ = int(random(3))-1; 



if(choice == 0){
    @P.x+= stepX; 
}
else if(choice == 1){
    @P.x-= stepX;
}
else if(choice == 2){
    @P.y += stepY;
}else if(choice == 3){
    @P.y -= stepY;
}else if(choice == 4){
    @P.z += stepZ;
}else if(choice == 5){
    @P.z -= stepZ;
}